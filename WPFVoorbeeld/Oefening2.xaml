<Window x:Class="WPFVoorbeeld.Oefening2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFVoorbeeld"
        mc:Ignorable="d"
        Title="Oefening2" Height="450" Width="800">
    <Grid>
        <WrapPanel>
            <TextBox x:Name="myTextbox" Height="30" Width="auto" Text="Hello i'm a textbox"></TextBox>
            <Button x:Name="myButton" Content="show value" Click="myButton_Click"></Button>
        </WrapPanel>
    </Grid>
</Window>
