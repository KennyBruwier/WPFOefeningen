<Window x:Class="WPFVoorbeeld.Oefening33"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFVoorbeeld"
        mc:Ignorable="d"
        Title="Oefening33" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <WrapPanel>
                <Expander ExpandDirection="Right" IsExpanded="true">
                    <WrapPanel>
                        <Label x:Name="lbLabel" Content="dit is mijn tekst"/>
                        <Button Content="klik mij" x:Name="btClick" Click="btClick_Click"/>
                    </WrapPanel>
                </Expander>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
